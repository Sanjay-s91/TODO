<div class="container wrapper">
  <div class="inner-wrapper1">
    <div class="logo">
       <h1 style="color:red;padding:5px;margin-left: 15px; "> Login </h1>
     </div>
        <div class="row">
           <div class="col-lg-12 col-md-12 col-12 col-sm-12">
              <div class="form-box">
              <%= form_with url:sessions_path do |form| %>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                           <div class="form-group">    
                                <%= form.label :email %><br> 
                                <div class ="input_field"> <%= form.text_field :email,class: 'form-control' %>
                                </div>
                            </div>
                          </div>
                         </div>
                         <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="form-group">
                                  <%= form.label :password %><br> 
                                    <div class ="input_field"><%= form.password_field :password, class:'form-control' %> 
                                    </div>
                                </div>
                            </div>
                        </div>
                      <%= form.submit "Log In" %>   
                 <% end %>
               </div>

          <%= link_to 'signup',"#",{'data-toggle' => "modal", 'data-target' => '#exampleModal',class:"btn btn-primary m-4 "}%>
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New user</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <%= render 'form' %>
                 </div>
              </div>
            </div>
          </div>
      </div> 
  </div>
</div>

