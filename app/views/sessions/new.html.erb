 <%= form_with url:sessions_path do |form| %>
<div class="container wrapper">
  <div class="inner-wrapper1">
    <div class="logo">
       <h1 style="color:red;padding:5px;margin-left: 15px; "> Login </h1>
     </div>
        <div class="row">
           <div class="col-lg-12 col-md-12 col-12 col-sm-12">
              <div class="form-box">
                <form>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                           <div class="form-group">    
                                <%= form.label :email %><br> 
                                <div class ="input_field"> <%= form.text_field :email,class: 'form-control' %>
                                </div>
                            </div>
                          </div>
                         </div>
                         <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="form-group">
                                  <%= form.label :password %><br> 
                                    <div class ="input_field"><%= form.password_field :password, class:'form-control' %> 
                                    </div>
                                </div>
                            </div>
                        </div>
                      <%= form.submit "Log In" %>   
                    </form>
               </div>
              <%= link_to "sign up hear",signup_path,class:"ml-4 mt-4 btn btn-info" %>
           </div>
       </div> 
  </div>
</div>
<% end %>