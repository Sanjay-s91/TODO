

<h1 class = "user">Task list</h1>
<div class="container">
  <table class = "table table-striped table-dark table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
      	<th align="">Task List of </th>
      	<th>UserName:<%= @user.first_name %></th>
      	<th colspan="2"></th>
      </tr>
      <tr>
        <th>Task name</th>
        <th>Task Note</th>
        <th>Start date</th>
        <th>End date</th>
        
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @task.each do |task| %>
      <tr>
        <td><%= task.task_name %></td>
        <td><%= task.task_note %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
       
          <% if current_user%>
            <td><span><%= link_to '',user_task_path(@user,task),class:"	fa fa-address-card fa-9x"%></td>
            <td><span><%= link_to '',edit_user_task_path(@user,task),class:"fa fa-edit fa-9x"%></span></td>
            <td><span><%= link_to '',[@user,task],class:"fa fa-trash fa-9x", method: :delete, data: { confirm: 'Are you sure?' } %><span></td>
           <%end%>
         </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
