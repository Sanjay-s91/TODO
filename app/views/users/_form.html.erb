
<%= form_with(model:user,local:true) do |form|  %>

<% if user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

  <ul>
    <% user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class = "container wrapper">
  <div class = "inner-wrapper">
   <div class = "header  h-25 "> 
      <h1 class = "signup p-3">Sign up</h1>
      <div class = "logo bg-info">
     </div>
    </div>
   <h5 class = " tag-line p-3 m-2">Create your account. it's free and only takes a minute.</h5>
  <div class = "row">
    <div class = "col-lg-12 col-md-12 col-12 col-sm-12">
      <div class = "form-box">
        <form>
        <div class = "row">
            <div class = "col-lg-6 col-md-6 col-sm-12 col-12">
              <div class = "form-group">
                <span class = "input-group-addon"><span class="  fa fa-user fa-lg fa-fw"></span></span>
                <div class = "input-field">
                 <%= form.text_field :first_name,required:true ,class: "form-control",placeholder:"First name" %>
                </div>
              </div>
            </div>
            <div class = "col-lg-6 col-md-6 col-sm-12 col-12">
              <div class = "form-group">
               <span class = "input-group-addon"><span class="  fa fa-user fa-lg fa-fw"></span></span>
                <div class = "input-field"> <%= form.text_field :last_name,class: "form-control",placeholder:"Last name" %>
                </div>
              </div>
            </div>
          </div>
          <div class = "row"> 
            <div class = "col-lg-12 col-md-12 col-sm-12 col-12">
             <div class = "form-group">
                   <span class = "input-group-addon"><span class = "fa fa-envelope fa-lg fa-fw"></span></span>
                <div class = "input-field"><%= form.text_field :email,class: "form-control",placeholder:"Email" %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-12 col-12">
            <div class="form-group">
                   <span class="input-group-addon"><span class="fa fa-key fa-lg fa-fw"></span></span>
            
              <div class ="input-field"><%= form.password_field :password,class: "form-control",placeholder: "password" %>
              </div>
            </div>                
          </div>
          <div class="col-lg-6 col-md-6 col-sm-12 col-12">
            <div class="form-group">
                   <span class="input-group-addon"><span class="fa fa-key fa-lg fa-fw"></span></span>
             
              <div class ="input-field">  <%= form.password_field :password_confirmation,class: "form-control",placeholder:"Retype Password" %>
              </div>
            </div>
          </div>
          <div class = "field">
            <%=form.label :image%>
            <%=form.file_field :image%>
          </div>
          <div class="actions">
            <%= form.submit class:"btn btn-info m-3" %>
          </div>
         </form>
       </div>
    </div>
  </div>
</div> 
</div>
</div>
<%end%> 