
<h1 class = "user">Users list</h1>
<div class="container">
  <table class = "table table-striped table-dark table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Id</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th colspan="5"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%=user.id%></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to '', user,class:"fa fa-address-card fa-10x" %></td>
        <td><%= link_to '', edit_user_path(user),class:"fa fa-edit fa-9x" %></td>
        <td><%= link_to '', user,class:"fa fa-trash fa-9x", method: :delete, data:{ confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'all task', user_tasks_path(user.id),class:"btn btn-outline-primary" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
 