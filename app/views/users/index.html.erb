<h1 class = "user">Users list</h1>
<div class="container">
  <table class = "table table-striped table-dark table-bordered table-hover",id = "data">
    <thead class="thead-dark">
      <tr>
        <th>User Id</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th colspan="5"></th>
      </tr>
    </thead>
     <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%=user.id%></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>      
        <td><%= user.email %></td>
        <td><%= link_to '', user,class:"fa fa-address-card fa-10x" %></td>
        <td><%= link_to '', "#",{ 'data-toggle' => "modal", 'data-target' => "#edit_#{user.id}",class:"fa fa-edit fa-9x "} %></td>
            <div class = "modal fade" id = "edit_<%=user.id%>" tabindex = "-1" role="dialog" aria-labelledby ="exampleModalLabel" aria-hidden = "true">
           <div class = "modal-dialog" role = "document">
              <div class = "modal-content">
                 <div class = "modal-header">
                    <h5 class = "modal-title" id = "exampleModalLabel">Edit user</h5>
                   <button type = "button" class = "close" data-dismiss = "modal" aria-label = "Close">
                     <span aria-hidden = "true">&times;</span>
                   </button> 
                 </div>
                   <div class="modal-body"> 
                     <%= render 'edit',user:user %>
                   </div>
               </div>
            </div>
          </div>
          <td><%= link_to '', user, class: "delete fa fa-trash fa-9x", method: :delete, data:{ confirm: 'Are you sure?',remote:true} %></td>
        <td><%= link_to 'all task', user_tasks_path(user.id),class:"btn btn-outline-primary" %></td>
      </tr>
    <% end %>
   </tbody>
  </table>
</div>
<br>
    <%= link_to 'add user1',"#",{'data-toggle' => "modal", 'data-target' => '#exampleModal',class:"btn btn-primary"}%>
    <div class = "modal fade" id = "exampleModal" tabindex = "-1" role = "dialog" aria-labelledby = "exampleModalLabel" aria-hidden = "true">
      <div class = "modal-dialog" role="document">
        <div class = "modal-content">
          <div class = "modal-header">
            <h5 class = "modal-title" id = "exampleModalLabel">New user</h5>
            <button type = "button" class = "close" data-dismiss = "modal" aria-label = "Close">
              <span aria-hidden = "true">&times;</span>
            </button>
          </div>
          <div class = "modal-body">
            <%= render 'form'%>
         </div>
      </div>
    </div>
  </div>
           
           