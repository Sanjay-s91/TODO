
<div class="jumbotron">
  <h1 class="display-4">
    <%= @user.first_name %>
    <%= @user.last_name %>
  </h1>

  <p class="lead">  <%= @user.email %></p>
  <div style="width:200px;height: auto;margin-left:30%">
     <%= image_tag(@user.image)%>
      <%= form_with(model:@user,local:true) do |form|  %>
          <%=form.file_field :image%>
       <%= form.submit "change picture", class:"btn btn-info m-1" %>
     <%end%> 
  </div> 
  
     <td><%= link_to '', "#",{ 'data-toggle' => "modal", 'data-target' => "#edit_#{@user.id}",class:" float-left btn btn-info fa fa-edit fa-10x "} %></td>
            <div class = "modal fade" id = "edit_<%=@user.id%>" tabindex = "-1" role="dialog" aria-labelledby ="exampleModalLabel" aria-hidden = "true">
           <div class = "modal-dialog" role = "document">
              <div class = "modal-content">
                <div class = "modal-header">
                   <h5 class = "modal-title" id = "exampleModalLabel">Edit user</h5>
                   <button type = "button" class = "close" data-dismiss = "modal" aria-label = "Close">
                     <span aria-hidden = "true">&times;</span>
                   </button> 
                </div>
                   <div class="modal-body"> 
                     <%= render 'edit',user:@user %>
                   </div>
               </div>
            </div>
          </div>
      <%= link_to '', users_path,class:"btn btn-info float-right fa fa-mail-reply fa-10x"%>
</div>